{
	"trailingComma": "none",
	"tabWidth": 4,
	"useTabs": true,
	"bracketSpacing": true,
	"arrowParens": "always",
	"singleAttributePerLine": false,
	"overrides": [
		{
			"files": "**/lwc/**/*.html",
			"options": { "parser": "lwc" }
		},
		{
			"files": "**/*.{cls,trigger,apex}",
			"options": {
				"apexInsertFinalNewline": true,
				"printWidth": 140
			}
		},
		{
			"files": "*.{cmp,page,component}",
			"options": { "parser": "html" }
		}
	]
}

<?xml version="1.0" encoding="UTF-8"?>
<SharingRules xmlns="http://soap.sforce.com/2006/04/metadata">
    <sharingCriteriaRules>
        <fullName>Dashcord_Sharing_Rule</fullName>
        <accessLevel>Edit</accessLevel>
        <description>used by Dashcord app</description>
        <label>Dashcord Sharing Rule</label>
        <sharedTo>
            <group>Dashcord</group>
        </sharedTo>
        <criteriaItems>
            <field>OwnerId</field>
            <operation>notEqual</operation>
            <value>.</value>
        </criteriaItems>
    </sharingCriteriaRules>
    <sharingCriteriaRules>
        <fullName>Grant_Lead_Write_Acces_to_Internal_users</fullName>
        <accessLevel>Edit</accessLevel>
        <description>STP: Created to share lead read/write access to internal users.</description>
        <label>Grant Lead Write Acces to Internal users</label>
        <sharedTo>
            <roleAndSubordinatesInternal>Business_Reporting</roleAndSubordinatesInternal>
        </sharedTo>
        <criteriaItems>
            <field>RecordTypeId</field>
            <operation>equals</operation>
            <value>BG_Standard</value>
        </criteriaItems>
    </sharingCriteriaRules>
    <sharingCriteriaRules>
        <fullName>StarTrack_Edit_Leads</fullName>
        <accessLevel>Edit</accessLevel>
        <description>Provided edit access to leads</description>
        <label>StarTrack Edit Leads</label>
        <sharedTo>
            <group>All_StarTrack_Users</group>
        </sharedTo>
        <criteriaItems>
            <field>RecordTypeId</field>
            <operation>equals</operation>
            <value>StarTrack Lead</value>
        </criteriaItems>
    </sharingCriteriaRules>
</SharingRules>

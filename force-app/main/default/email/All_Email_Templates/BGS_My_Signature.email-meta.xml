<?xml version="1.0" encoding="UTF-8"?>
<EmailTemplate xmlns="http://soap.sforce.com/2006/04/metadata">
    <available>true</available>
    <description>BGS Service Delivery signature using User details</description>
    <encodingKey>ISO-8859-1</encodingKey>
    <name>BGS My Signature</name>
    <style>none</style>
    <subject>Case # {!Case.CaseNumber} - {!Case.Subject}</subject>
    <textOnly>{!User.FirstName} {!User.LastName}
{!User.Title}
{!User.Department}
{!User.CompanyName}

T {!User.Phone}

----------------------</textOnly>
    <type>custom</type>
    <uiType>Aloha</uiType>
</EmailTemplate>

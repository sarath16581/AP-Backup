    <rules>
        <fullName>APT Is Band Change</fullName>
        <actions>
            <name>APT_Is_Band_Changed</name>
            <type>FieldUpdate</type>
        </actions>
        <active>false</active>
        <formula>NOT(ISBLANK(PRIORVALUE(APT_Band__c) ))&amp;&amp; ISCHANGED(APT_Band__c) &amp;&amp; (Apttus_Config2__LineItemId__r.Apttus_Config2__ConfigurationId__r.APT_Created_On__c = &apos;Amendment Quote&apos;)&amp;&amp;Apttus_Config2__LineItemId__r.APT_New_Amend__c==false</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>

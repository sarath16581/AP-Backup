    <rules>
        <fullName>Membership_FutureDate</fullName>
        <active>true</active>
        <booleanFilter>1 AND 2 AND (3 OR 4)</booleanFilter>
        <criteriaItems>
            <field>Membership__c.Status__c</field>
            <operation>equals</operation>
            <value>Active</value>
        </criteriaItems>
        <criteriaItems>
            <field>Membership__c.APLAC_MembershipDate__c</field>
            <operation>greaterThan</operation>
            <value>TODAY</value>
        </criteriaItems>
        <criteriaItems>
            <field>Membership__c.RecordTypeId</field>
            <operation>equals</operation>
            <value>APLAC Membership</value>
        </criteriaItems>
        <criteriaItems>
            <field>Membership__c.RecordTypeId</field>
            <operation>equals</operation>
            <value>null</value>
        </criteriaItems>
        <description>E-mail notification for future dates.</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
        <workflowTimeTriggers>
            <actions>
                <name>Email_Alert_Membership_FutureDate</name>
                <type>Alert</type>
            </actions>
            <actions>
                <name>Update_hidden_APLAC_Checker</name>
                <type>FieldUpdate</type>
            </actions>
            <offsetFromField>Membership__c.APLAC_MembershipDate__c</offsetFromField>
            <timeLength>0</timeLength>
            <workflowTimeTriggerUnit>Days</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
    </rules>

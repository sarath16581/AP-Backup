<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <fieldUpdates>
        <fullName>APT_Update_Unit_Price</fullName>
        <field>Apttus_Config2__UsageRate__c</field>
        <formula>Apttus_Config2__PriceOverride__c</formula>
        <name>APT_Update_Unit_Price</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <rules>
        <fullName>APT_Update Unit Price</fullName>
        <actions>
            <name>APT_Update_Unit_Price</name>
            <type>FieldUpdate</type>
        </actions>
        <active>false</active>
        <description>Copy Unit Price from Adjustment Amount</description>
        <formula>(Apttus_Config2__LineItemId__r.Apttus_Config2__ProductId__r.ProductCode == &apos;eParcelStandard&apos; &amp;&amp; NOT(ISNULL(Apttus_Config2__LineItemId__r.APT_Rate_Card_Key__c)) &amp;&amp; NOT(ISNULL(Apttus_Config2__LineItemId__r.Apttus_Config2__AdjustmentAmount__c))) || (Apttus_Config2__LineItemId__r.Apttus_Config2__ProductId__r.ProductCode == &apos;eParcelExpress&apos; &amp;&amp; NOT(ISNULL(Apttus_Config2__LineItemId__r.APT_Rate_Card_Key__c)) &amp;&amp; NOT(ISNULL(Apttus_Config2__LineItemId__r.Apttus_Config2__AdjustmentAmount__c))) || (Apttus_Config2__LineItemId__r.Apttus_Config2__ProductId__r.ProductCode == &apos;InternationalBundle&apos; &amp;&amp; NOT(ISNULL(Apttus_Config2__LineItemId__r.APT_Rate_Card_Key__c)) &amp;&amp; NOT(ISNULL(Apttus_Config2__LineItemId__r.Apttus_Config2__AdjustmentAmount__c)) &amp;&amp; Apttus_Config2__LineItemId__r.Apttus_Config2__AdjustmentAmount__c &gt; 2)</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
</Workflow>

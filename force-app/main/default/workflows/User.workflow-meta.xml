<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>NotifcationToSalesforceAribaUser</fullName>
        <ccEmails>DLSalesforceCRMSupport@auspost.com.au</ccEmails>
        <ccEmails>Data.Quality@auspost.com.au</ccEmails>
        <description>NotifcationToSalesforceAribaUser</description>
        <protected>false</protected>
        <recipients>
            <field>Email</field>
            <type>email</type>
        </recipients>
        <senderAddress>dlsalesforcecrmsupport@auspost.com.au</senderAddress>
        <senderType>OrgWideEmailAddress</senderType>
        <template>Sales_Business_System/WelcomeToSalesforce_AribaEmail</template>
    </alerts>
    <alerts>
        <fullName>NotifcationToSalesforceUser</fullName>
        <ccEmails>DLSalesforceCRMSupport@auspost.com.au</ccEmails>
        <ccEmails>Data.Quality@auspost.com.au</ccEmails>
        <description>NotifcationToSalesforceUser</description>
        <protected>false</protected>
        <recipients>
            <field>Email</field>
            <type>email</type>
        </recipients>
        <senderAddress>dlsalesforcecrmsupport@auspost.com.au</senderAddress>
        <senderType>OrgWideEmailAddress</senderType>
        <template>Sales_Business_System/WelcomeToSalesforceEmail</template>
    </alerts>
    <alerts>
        <fullName>NotifcationToSalesforceUserNonSeller</fullName>
        <ccEmails>DLSalesforceCRMSupport@auspost.com.au</ccEmails>
        <description>NotifcationToSalesforceUserNonSeller</description>
        <protected>false</protected>
        <recipients>
            <field>Email</field>
            <type>email</type>
        </recipients>
        <senderAddress>dlsalesforcecrmsupport@auspost.com.au</senderAddress>
        <senderType>OrgWideEmailAddress</senderType>
        <template>Sales_Business_System/WelcomeToSalesforceEmail</template>
    </alerts>
    <fieldUpdates>
        <fullName>Deactivate_Bharat</fullName>
        <field>IsActive</field>
        <literalValue>0</literalValue>
        <name>Deactivate_Bharat</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Literal</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <rules>
        <fullName>Role_SA</fullName>
        <active>true</active>
        <criteriaItems>
            <field>User.Username</field>
            <operation>equals</operation>
            <value>bharat.parekh@auspost.com.au</value>
        </criteriaItems>
        <criteriaItems>
            <field>User.IsActive</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
        <workflowTimeTriggers>
            <actions>
                <name>Deactivate_Bharat</name>
                <type>FieldUpdate</type>
            </actions>
            <offsetFromField>User.CreatedDate</offsetFromField>
            <timeLength>8</timeLength>
            <workflowTimeTriggerUnit>Days</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
    </rules>
    <rules>
        <fullName>UserCreationSalesforce</fullName>
        <actions>
            <name>NotifcationToSalesforceUser</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>User.UserType</field>
            <operation>equals</operation>
            <value>Standard</value>
        </criteriaItems>
        <criteriaItems>
            <field>User.AutoEmail__c</field>
            <operation>equals</operation>
            <value>Salesforce</value>
        </criteriaItems>
        <description>When User License equals &quot;Salesforce&quot; &amp; the AutoEmail equals Salesforce, a generic Salesforce welcome email will be sent.</description>
        <triggerType>onCreateOnly</triggerType>
    </rules>
    <rules>
        <fullName>UserCreationSalesforceAndAriba</fullName>
        <actions>
            <name>NotifcationToSalesforceAribaUser</name>
            <type>Alert</type>
        </actions>
        <active>false</active>
        <criteriaItems>
            <field>User.UserType</field>
            <operation>equals</operation>
            <value>Standard</value>
        </criteriaItems>
        <criteriaItems>
            <field>User.AutoEmail__c</field>
            <operation>equals</operation>
            <value>Salesforce &amp; Ariba</value>
        </criteriaItems>
        <description>When User License equals &quot;Salesforce&quot; &amp; AutoEmail is Salesforce &amp; Ariba, a generic Salesforce &amp; Ariba welcome email will be sent.</description>
        <triggerType>onCreateOnly</triggerType>
    </rules>
    <rules>
        <fullName>UserCreationSalesforceNonSeller</fullName>
        <actions>
            <name>NotifcationToSalesforceUserNonSeller</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>User.UserType</field>
            <operation>equals</operation>
            <value>Standard</value>
        </criteriaItems>
        <criteriaItems>
            <field>User.AutoEmail__c</field>
            <operation>equals</operation>
            <value>Salesforce Non Seller</value>
        </criteriaItems>
        <description>When User License equals &quot;Salesforce&quot; &amp; the AutoEmail equals &apos;Salesforce Non Seller&apos;, a generic Salesforce welcome email will be sent.</description>
        <triggerType>onCreateOnly</triggerType>
    </rules>
</Workflow>

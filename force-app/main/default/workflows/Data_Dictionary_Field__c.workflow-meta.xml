<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <fieldUpdates>
        <fullName>UpdatePrimaryKey</fullName>
        <description>Updates the Object/Field combination key</description>
        <field>ObjectFieldKey__c</field>
        <formula>Object_API_Name__c + &quot;.&quot; + Field_API_Name__c</formula>
        <name>Update Primary Key</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <rules>
        <fullName>Set Object Field Key</fullName>
        <actions>
            <name>UpdatePrimaryKey</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <description>Combines Object/Field Key to a Primary Key</description>
        <formula>ISNEW() || ISCHANGED(Field_API_Name__c) || ISCHANGED(Object_API_Name__c) || ISBLANK(ObjectFieldKey__c)</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
</Workflow>

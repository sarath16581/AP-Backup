<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <fieldUpdates>
        <fullName>TDF_Update_RT_Prime</fullName>
        <field>RecordTypeId</field>
        <lookupValue>PDC_PrimeMover</lookupValue>
        <lookupValueType>RecordType</lookupValueType>
        <name>Update RT to Prime</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>LookupValue</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>TDF_Update_RT_to_Rigid</fullName>
        <field>RecordTypeId</field>
        <lookupValue>PDC_Rigid</lookupValue>
        <lookupValueType>RecordType</lookupValueType>
        <name>Update RT to Rigid</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>LookupValue</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <rules>
        <fullName>Update RT to Prime</fullName>
        <actions>
            <name>TDF_Update_RT_Prime</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <description>Update record type if Vehicle type is changed. AJ 28/07/18 Constrain to only if Rigid or Prime record type</description>
        <formula>ISCHANGED(Vehicle__c) &amp;&amp;  ISPICKVAL(Vehicle__r.Type__c, &apos;Prime Mover&apos;) &amp;&amp;  OR(RecordType.DeveloperName = &apos;PDC_Rigid&apos;, RecordType.DeveloperName = &apos;PDC_PrimeMover&apos;)</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>Update RT to Rigid</fullName>
        <actions>
            <name>TDF_Update_RT_to_Rigid</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <description>Update record type if Vehicle type is changed. AJ 28/07/18 Constrain to only if Prime or Rigid record type</description>
        <formula>ISCHANGED(Vehicle__c) &amp;&amp;  ISPICKVAL(Vehicle__r.Type__c, &apos;Rigid Vehicle&apos;) &amp;&amp;  OR(RecordType.DeveloperName = &apos;PDC_Rigid&apos;, RecordType.DeveloperName = &apos;PDC_PrimeMover&apos;)</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
</Workflow>

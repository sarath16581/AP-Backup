    <rules>
        <fullName>APT Price Change</fullName>
        <actions>
            <name>Band_Changed_Update</name>
            <type>FieldUpdate</type>
        </actions>
        <active>false</active>
        <formula>(ISCHANGED(Apttus_Config2__AdjustmentType__c)||(NOT(ISBLANK(PRIORVALUE(Apttus_Config2__AdjustmentAmount__c) ))&amp;&amp;ISCHANGED(Apttus_Config2__AdjustmentAmount__c))) &amp;&amp; (Apttus_Config2__ConfigurationId__r.APT_Created_On__c = &apos;Amendment Quote&apos;)&amp;&amp; APT_New_Amend__c==false</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>APT Update Line item New Flag</fullName>
        <actions>
            <name>APT_New_flag_Update</name>
            <type>FieldUpdate</type>
        </actions>
        <active>false</active>
        <description>Apttus solution for cases CAS-05879-Q4M6B9 and CAS-07458-Q7G5M4</description>
        <formula>ISCHANGED(APT_Rate_Card_Key__c)</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
</Workflow>

<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <fieldUpdates>
        <fullName>Update_Unique_Prd_SubCat</fullName>
        <field>Unique_Prd_SubCat__c</field>
        <formula>TEXT(Product_Family__c) + TEXT(Product_Sub_Category__c)</formula>
        <name>Update Unique Prd SubCat</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <rules>
        <fullName>No Duplicate Product and Sub Category</fullName>
        <actions>
            <name>Update_Unique_Prd_SubCat</name>
            <type>FieldUpdate</type>
        </actions>
        <active>false</active>
        <formula>AND(NOT(ISPICKVAL(Product_Family__c, &apos;&apos;)), NOT(ISPICKVAL( Product_Sub_Category__c , &apos;&apos;)))</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
</Workflow>

<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>Reminder_Customer_Performance_COA_Due_Reminder</fullName>
        <description>Reminder Customer Performance COA Due Reminder</description>
        <protected>false</protected>
        <recipients>
            <field>COA_Result_Owner_Email__c</field>
            <type>email</type>
        </recipients>
        <recipients>
            <type>owner</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>Contract_Performance/Contract_Performance_COA_Reminder</template>
    </alerts>
    <fieldUpdates>
        <fullName>SetIsBreached</fullName>
        <field>isBreachedWorkflowFlag__c</field>
        <literalValue>1</literalValue>
        <name>SetIsBreached</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Literal</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>SetResultDate</fullName>
        <field>Result_Last_Modified__c</field>
        <formula>NOW()</formula>
        <name>SetResultDate</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>UpdateLastModified</fullName>
        <field>Result_Last_Modified__c</field>
        <formula>NOW()</formula>
        <name>UpdateLastModified</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>setReminderFlag</fullName>
        <field>isReminderEmailWorkflowFlag__c</field>
        <literalValue>1</literalValue>
        <name>setReminderFlag</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Literal</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <rules>
        <fullName>ResultSet</fullName>
        <actions>
            <name>SetResultDate</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <formula>ISCHANGED( Result__c)</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>onBreach</fullName>
        <active>true</active>
        <formula>ISPICKVAL(Result__c, &quot;Not Assessed&quot;) || ISPICKVAL(Result__c, &quot;Not Met&quot;) || ISPICKVAL(Result__c, &quot;Partially Met&quot;)</formula>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
        <workflowTimeTriggers>
            <actions>
                <name>SetIsBreached</name>
                <type>FieldUpdate</type>
            </actions>
            <offsetFromField>Contract_Performance_Result__c.Result_Due_Date__c</offsetFromField>
            <timeLength>1</timeLength>
            <workflowTimeTriggerUnit>Hours</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
    </rules>
    <rules>
        <fullName>onDueDateReminderCOA</fullName>
        <active>true</active>
        <formula>(ISPICKVAL(Result__c, &quot;Not Assessed&quot;) || ISPICKVAL(Result__c, &quot;Not Met&quot;)) &amp;&amp;  Contract_Performance_SLA_COA__r.RecordType.Name == &quot;COA&quot;</formula>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
        <workflowTimeTriggers>
            <actions>
                <name>Reminder_Customer_Performance_COA_Due_Reminder</name>
                <type>Alert</type>
            </actions>
            <offsetFromField>Contract_Performance_Result__c.Result_Due_Date_Reminder__c</offsetFromField>
            <timeLength>1</timeLength>
            <workflowTimeTriggerUnit>Hours</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
    </rules>
    <rules>
        <fullName>onDueDateReminderSLA</fullName>
        <active>true</active>
        <formula>(ISPICKVAL(Result__c, &quot;Not Assessed&quot;) || ISPICKVAL(Result__c, &quot;Not Met&quot;)) &amp;&amp;  Contract_Performance_SLA_COA__r.RecordType.Name == &quot;SLA&quot;</formula>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
        <workflowTimeTriggers>
            <actions>
                <name>setReminderFlag</name>
                <type>FieldUpdate</type>
            </actions>
            <offsetFromField>Contract_Performance_Result__c.Result_Due_Date_Reminder__c</offsetFromField>
            <timeLength>1</timeLength>
            <workflowTimeTriggerUnit>Hours</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
    </rules>
</Workflow>

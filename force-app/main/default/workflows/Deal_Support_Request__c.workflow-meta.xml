    <rules>
        <fullName>Billing_Account_Creation_Retry_Update</fullName>
        <actions>
            <name>IntegrationTransaction_Id_to_Blank</name>
            <type>FieldUpdate</type>
        </actions>
        <actions>
            <name>Update_Integration_Status_Description</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <description>Updates the Integration status description and transaction id attributes to blank in case user updates the Integration status from Error to blank</description>
        <formula>AND( ISCHANGED(Integration_Status__c), ISBLANK(Integration_Status__c), (LOWER(PRIORVALUE(Integration_Status__c)) ==&apos;error&apos;)  )</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>

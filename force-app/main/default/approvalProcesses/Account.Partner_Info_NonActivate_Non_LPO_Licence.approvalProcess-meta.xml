<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>PartnerInfo_State_Admin_Manager</submitter>
        <type>roleSubordinatesInternal</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>Assignment_Effective_From_Date__c</field>
        <field>Facility__c</field>
        <field>Parent</field>
        <field>SAP_Vendor_ID__c</field>
        <field>Accounts_Receivable_ID__c</field>
        <field>Annual_Topup_Payment__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Network_Manager__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Account.Licence_Type__c</field>
                <operation>notEqual</operation>
                <value>PP</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Area Network Manager</label>
        <name>Area_Network_Manager</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Account.Licence_Type__c</field>
                <operation>equals</operation>
                <value>PP</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Licence PP Approval</label>
        <name>Licence_PP_Approval</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Account.Licence_Type__c</field>
                <operation>notEqual</operation>
                <value>PP</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>ApproveRecord</ifCriteriaNotMet>
        <label>RNP Manager</label>
        <name>RNP_Manager</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Account.Minimum_Approval_Level__c</field>
                <operation>greaterOrEqual</operation>
                <value>3</value>
            </criteriaItems>
            <criteriaItems>
                <field>Account.Licence_Type__c</field>
                <operation>notEqual</operation>
                <value>PP</value>
            </criteriaItems>
        </entryCriteria>
        <label>National RNP Manager</label>
        <name>National_RNP_Manager</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <description>Partner Info Management - Approval process for setting non LPO Licence to Not Activated</description>
    <emailTemplate>Australia_Post_Email_Templates/PartnerInfo_Cease_or_Not_Activate_Licence_Request</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Account.RecordType</field>
            <operation>equals</operation>
            <value>Licence PP,Licence CMA,Licence CPA</value>
        </criteriaItems>
        <criteriaItems>
            <field>Account.Licence_Status__c</field>
            <operation>equals</operation>
            <value>Approved,Draft,Rejected</value>
        </criteriaItems>
        <criteriaItems>
            <field>Account.Not_Activated_Reason__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Partner_Info_Set_App_Status_NA_Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Partner_Info_Set_Licence_Status_to_Not_A</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Partner_Info_Set_Appr_Status_to_null</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Partner_Info_Set_Not_Act_Reason_to_null</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Partner_Info_Set_App_Status_Pend_NA</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Partner Info NonActivate Non LPO Licence</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>3</processOrder>
    <recallActions>
        <action>
            <name>Partner_Info_Set_Appr_Status_to_null</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Partner_Info_Set_Not_Act_Reason_to_null</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>

<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Year__c</field>
        <field>Legal_Entity_Name__c</field>
        <field>Billing_Account_Name__c</field>
        <field>Published_Rate__c</field>
        <field>Confirmed_Rate__c</field>
        <field>Published_Date__c</field>
        <field>Confirmed_Date__c</field>
        <field>Conclusion_Date__c</field>
        <field>Status__c</field>
        <field>Sub_Status__c</field>
        <field>Comments__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Send_Email_to_APR_Owner_Approval</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Update_Status_Pending_Approval</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>User.Manager</field>
                <operation>notEqual</operation>
                <value>Michael Oates</value>
            </criteriaItems>
            <criteriaItems>
                <field>User.Manager</field>
                <operation>notEqual</operation>
                <value>Gary Starr</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Step 1</label>
        <name>Step_1</name>
        <rejectionActions>
            <action>
                <name>Send_Email_to_APR_Owner_Rejection</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Update_Status_Rejected</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Send_Email_to_APR_Owner_Approval</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Update_Status_Pending_Approval2</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>User.Manager</field>
                <operation>notEqual</operation>
                <value>Michael Oates</value>
            </criteriaItems>
            <criteriaItems>
                <field>User.Manager</field>
                <operation>notEqual</operation>
                <value>Gary Starr</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Step 2</label>
        <name>Step_2</name>
        <rejectBehavior>
            <type>BackToPrevious</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>Send_Email_to_APR_Owner_Rejection</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Update_Status_Rejected3</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Send_Email_to_APR_Owner_Approval</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Update_Status_Pending_Approval3</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>edward.hunter@auspost.com.au</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>Unanimous</whenMultipleApprovers>
        </assignedApprover>
        <label>Step 3</label>
        <name>Step_3</name>
        <rejectBehavior>
            <type>BackToPrevious</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>Send_Email_to_APR_Owner_Rejection</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Update_Status_Rejected4</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <emailTemplate>All_Email_Templates/APR_for_Billing_Accts</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>AND(OR(
(Published_Rate__c  &lt;&gt;  Confirmed_Rate__c),
(Confirmed_Date__c  &lt;&gt;  Published_Date__c)
),OR(ISPICKVAL(Status__c, &apos;Exemption&apos;),ISPICKVAL(Status__c, &apos;Reduction&apos;),ISPICKVAL(Status__c, &apos;Deferral&apos;)))</formula>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Send_Email_to_APR_Owner_Approval</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_Status_Approved2</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Send_Email_to_APR_Owner_Rejection</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_Status_Rejected2</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Update_Approval_Status_Pending_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>APR Approval Process</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>1</processOrder>
    <recallActions>
        <action>
            <name>Update_Approval_Status</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>

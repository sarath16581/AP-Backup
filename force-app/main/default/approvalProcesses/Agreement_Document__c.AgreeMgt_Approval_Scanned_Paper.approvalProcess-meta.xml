<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>PartnerInfo_National_RNP_Manager</submitter>
        <type>roleSubordinates</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Level_1_Approver__c</name>
                <type>relatedUserField</type>
            </approver>
            <approver>
                <name>Level_2_Approver__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Partner Agreement Document main approval step</description>
        <label>Approval</label>
        <name>Approval</name>
    </approvalStep>
    <description>Partner Agreement Management approval process for Scanned Paper Approval Type.</description>
    <emailTemplate>Australia_Post_Email_Templates/Agree_Mgt_Approval_Notification_Template</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Agreement_Document__c.Status__c</field>
            <operation>equals</operation>
            <value>Draft</value>
        </criteriaItems>
        <criteriaItems>
            <field>Agreement_Document__c.Document_Name__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>Agreement_Document__c.Allow_Submit_For_Approval__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <criteriaItems>
            <field>Agreement_Document__c.Approval_Type__c</field>
            <operation>equals</operation>
            <value>Scanned Paper</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>AgreeMgt_Approval_APStatusToApproved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>AgreeMgt_Approval_StatusToApproved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>AgreeMgt_Approval_ApStatusToRejected</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>AgreeMgt_PreApp_StatusToDraft</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>AgreeMgt_Approval_ApStatusToPending</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>AgreeMgt_Approval_StatusToPendingApprov</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>AgreeMgt_AppScan_AllowSubmitToFalse</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>AgreeMgt-Approval-Scanned Paper</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>3</processOrder>
    <recallActions>
        <action>
            <name>AgreeMgt_Approval_ApStatusToRecalled</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>AgreeMgt_PreApp_StatusToDraft</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>

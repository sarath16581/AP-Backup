<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>PartnerInfo_National_RNP_Manager</submitter>
        <type>roleSubordinatesInternal</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>Sub_Type__c</field>
        <field>Request_Change__c</field>
        <field>Annual_Amount__c</field>
        <field>End_Date__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Network_Manager__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Network Manager</label>
        <name>Network_Manager</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <label>RNP Manager</label>
        <name>RNP_Manager</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <entryCriteria>
            <formula>OR(AND( ISPICKVAL(Licence__r.Licence_Type__c, &quot;LPO&quot;), OR(Annual_Amount__c &gt; 5000, Negotiated_Lump_Sum__c &gt; 5000, Amount__c &gt; 5000)),
AND(OR(ISPICKVAL(Licence__r.Licence_Type__c, &quot;CMA&quot;), ISPICKVAL(Licence__r.Licence_Type__c, &quot;CPA&quot;)), OR(Annual_Amount__c &gt; 2000, Negotiated_Lump_Sum__c &gt; 2000, Amount__c &gt; 2000)),
AND(RecordType.DeveloperName = &quot;Loan&quot;, Term__c &gt; 24),
AND(RecordType.DeveloperName = &quot;Repayment Arrangement&quot;, Term__c &gt; 12))</formula>
        </entryCriteria>
        <label>National RNP Manager</label>
        <name>National_RNP_Manager</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <description>Used to renew an existing Partner Addendum</description>
    <emailTemplate>Australia_Post_Email_Templates/PartnerInfo_Renew_Addendum</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Partner_Addendum__c.Renewal_Status__c</field>
            <operation>equals</operation>
            <value>First Reminder Sent,Second Reminder Sent,Final Reminder Sent,Rejected</value>
        </criteriaItems>
        <criteriaItems>
            <field>Partner_Addendum__c.Request_Change__c</field>
            <operation>equals</operation>
            <value>Renew For Another Year</value>
        </criteriaItems>
        <criteriaItems>
            <field>Partner_Addendum__c.Status__c</field>
            <operation>equals</operation>
            <value>Active</value>
        </criteriaItems>
        <criteriaItems>
            <field>Partner_Addendum__c.Allow_Submit_For_Approval__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>PartnerInfo_Activate_Renewal_Status</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PartnerInfo_Delete_Request_Change</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PartnerInfo_PA_Approved_Appr_Status</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PartnerInfo_Renew_Addendum_End_Date</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Partner_Info_Notify_Rejection_of_Partner_Addendum_Renewal</name>
            <type>Alert</type>
        </action>
        <action>
            <name>PartnerInfo_Cease_Renewal_Status</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PartnerInfo_Delete_Request_Change</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PartnerInfo_PA_Rejected_Appr_Status</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>PartnerInfo_AllowSubmitToFalse</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PartnerInfo_PA_Pending_Appr_Status</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PartnerInfo_Pending_Renewal_Status</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>PartnerInfo Addendum Renewal</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>3</processOrder>
    <recallActions>
        <action>
            <name>PartnerInfo_Delete_Request_Change</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PartnerInfo_Draft_Renewal_Status</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PartnerInfo_PA_Draft_Appr_Status</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>

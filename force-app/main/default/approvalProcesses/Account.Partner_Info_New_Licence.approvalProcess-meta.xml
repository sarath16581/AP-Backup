<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>PartnerInfo_State_Admin_Manager</submitter>
        <type>role</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>Assignment_Effective_From_Date__c</field>
        <field>Facility__c</field>
        <field>Parent</field>
        <field>SAP_Vendor_ID__c</field>
        <field>Accounts_Receivable_ID__c</field>
        <field>Annual_Topup_Payment__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Network_Manager__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Area Network Manager</label>
        <name>Area_Network_Manager</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <label>RNP Manager</label>
        <name>RNP_Manager</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Account.Minimum_Approval_Level__c</field>
                <operation>greaterOrEqual</operation>
                <value>3</value>
            </criteriaItems>
        </entryCriteria>
        <label>National RNP Manager</label>
        <name>National_RNP_Manager</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <description>Partner Info Management - Approval process for creating new Licence</description>
    <emailTemplate>Australia_Post_Email_Templates/PartnerInfo_New_Licence_Request</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Account.RecordType</field>
            <operation>equals</operation>
            <value>Licence</value>
        </criteriaItems>
        <criteriaItems>
            <field>Account.Licence_Status__c</field>
            <operation>equals</operation>
            <value>Draft,Rejected</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Partner_Info_Approved_Licence_Status</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Partner_Info_Set_Appr_Status_to_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Partner_Info_Notify_Status_Update_of_Licence_assignment</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Partner_Info_Rejected_Licence_Status</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Partner_Info_Set_Appr_Status_to_Rejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Partner_Info_Pending_Licence_Status</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Partner_Info_Set_Appr_Status_to_Pending</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Partner Info - New Licence</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>4</processOrder>
    <recallActions>
        <action>
            <name>Partner_Info_Draft_Licence_Status</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>

<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>CaseNumber</field>
        <field>Owner</field>
        <field>Status</field>
        <field>ArticleTest__c</field>
        <field>Amount_Claimed__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Update_Credit_Approval_Limit</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>Account_Manager__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>This step requires approval of an Account Manager.</description>
        <entryCriteria>
            <formula>Credit_Approval_Limit__c &lt; Amount_Claimed__c</formula>
        </entryCriteria>
        <ifCriteriaNotMet>ApproveRecord</ifCriteriaNotMet>
        <label>Account Manager</label>
        <name>Account_Manager</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <description>This step requires approval of a Sales Manager.</description>
        <entryCriteria>
            <formula>Credit_Approval_Limit__c &lt; Amount_Claimed__c</formula>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Sales Manager</label>
        <name>Sales_Manager</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>StarTrack_Customer_Resolution_Manager</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Amount Claimed is greater than $1000.</description>
        <entryCriteria>
            <criteriaItems>
                <field>Case.Amount_Claimed__c</field>
                <operation>greaterThan</operation>
                <value>1000</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>ApproveRecord</ifCriteriaNotMet>
        <label>Customer Resolution Manager</label>
        <name>Customer_Resolution_Manager</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>StarTrack_Sales_Director</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Amount Claimed is greater than $1000.</description>
        <entryCriteria>
            <criteriaItems>
                <field>Case.Amount_Claimed__c</field>
                <operation>greaterThan</operation>
                <value>1000</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>ApproveRecord</ifCriteriaNotMet>
        <label>Sales Director</label>
        <name>Sales_Director</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>StarTrack_Head_of_Finance</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Amount Claimed is greater than $1000.</description>
        <entryCriteria>
            <criteriaItems>
                <field>Case.Amount_Claimed__c</field>
                <operation>greaterThan</operation>
                <value>1000</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>ApproveRecord</ifCriteriaNotMet>
        <label>Head of Finance</label>
        <name>Head_of_Finance</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>StarTrack_GM_Sales</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Amount Claimed is greater than $5000.</description>
        <entryCriteria>
            <criteriaItems>
                <field>Case.Amount_Claimed__c</field>
                <operation>greaterThan</operation>
                <value>5000</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>ApproveRecord</ifCriteriaNotMet>
        <label>GM Sales</label>
        <name>GM_Sales</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>StarTrack_GM_of_Finance</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Amount Claimed is greater than $5000.</description>
        <entryCriteria>
            <criteriaItems>
                <field>Case.Amount_Claimed__c</field>
                <operation>greaterThan</operation>
                <value>5000</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>ApproveRecord</ifCriteriaNotMet>
        <label>GM Finance</label>
        <name>GM_Finance</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>StarTrack_Parcels_COO</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Amount Claimed is greater than $10000.</description>
        <entryCriteria>
            <criteriaItems>
                <field>Case.Amount_Claimed__c</field>
                <operation>greaterThan</operation>
                <value>10000</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>ApproveRecord</ifCriteriaNotMet>
        <label>Parcels COO</label>
        <name>Parcels_COO</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>StarTrack_EGM_Product</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Amount claimed is greater than $10000.</description>
        <entryCriteria>
            <criteriaItems>
                <field>Case.Amount_Claimed__c</field>
                <operation>greaterThan</operation>
                <value>10000</value>
            </criteriaItems>
        </entryCriteria>
        <label>EGM Product</label>
        <name>EGM_Product</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <description>StarTrack Approval process for ex gratia credit dispute claim.</description>
    <emailTemplate>StarTrack_System_Emails/StarTrack_Credit_Dispute_Approval_Template</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Case.RecordType</field>
            <operation>equals</operation>
            <value>Credit Dispute Claim</value>
        </criteriaItems>
        <criteriaItems>
            <field>Case.Enquiry_Type__c</field>
            <operation>equals</operation>
            <value>CCM Exgratia (Cust Claim Met)</value>
        </criteriaItems>
        <criteriaItems>
            <field>Case.Account_Manager__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>Case.Amount_Claimed__c</field>
            <operation>greaterThan</operation>
            <value>0</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>StarTrack_Change_Case_Status_to_Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>StarTrack_Default_Credit_Approval_Limit</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>StarTrack_Ex_Gratia_Owner_Change</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>StarTrack_Set_Approval_Stat_to_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>StarTrack_Change_Case_Status_to_AR</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>StarTrack_Default_Credit_Approval_Limit</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>StarTrack_Set_Approval_Status_to_Draft</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>StarTrack_Change_Case_Status</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>StarTrack_Set_Approval_Status_to_Pending</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>StarTrack Credit Ex Gratia Approval</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>5</processOrder>
    <recallActions>
        <action>
            <name>StarTrack_Change_Case_Status_to_UI</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>StarTrack_Default_Credit_Approval_Limit</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>StarTrack_Set_Approval_Status_to_Draft</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>

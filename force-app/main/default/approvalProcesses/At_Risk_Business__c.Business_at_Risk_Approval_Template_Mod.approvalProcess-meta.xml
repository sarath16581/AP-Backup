<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Legal_Entity_Name__c</field>
        <field>Reason__c</field>
        <field>Issues__c</field>
        <field>Mitigation_Plan__c</field>
        <field>Escalated_To__c</field>
        <field>Escalation_Comments__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Key_Sales_Owner_Manager__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Manager Approval</label>
        <name>Manager_Approval</name>
        <rejectionActions>
            <action>
                <name>Update_Status_to_Rejected_by_SM</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>escalated_to_comment</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>update_Escalated_to_South</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>martin.siney@auspost.com.au</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>At_Risk_Business__c.Reason__c</field>
                <operation>equals</operation>
                <value>Service Performance</value>
            </criteriaItems>
            <criteriaItems>
                <field>Account.Sales_Segment__c</field>
                <operation>equals</operation>
                <value>Medium Business SA/NT,Medium Business VIC 1,Medium Business VIC 2,Medium Business VIC 3,Medium Business VIC 4</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Triage Service Partner South</label>
        <name>Triage_Service_Partner_South</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>Update_Status_rejected_by_triage</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>escalated_to_comment</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>update_Escalated_to_North</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>lauren.torrance@auspost.com.au</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>At_Risk_Business__c.Reason__c</field>
                <operation>equals</operation>
                <value>Service Performance</value>
            </criteriaItems>
            <criteriaItems>
                <field>Account.Sales_Segment__c</field>
                <operation>equals</operation>
                <value>Medium Business NSW 1,Medium Business NSW 2,Medium Business NSW 3,Medium Business NSW 4,Medium Business QLD 1,Medium Business QLD 2,Medium Business WA</value>
            </criteriaItems>
        </entryCriteria>
        <label>Triage Service Partner North</label>
        <name>Triage_Service_Partner_North</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>Update_Status_rejected_by_triage</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <description>Business at Risk Approval Template with approval steps for Service Partner Triage</description>
    <emailTemplate>Australia_Post_Email_Templates/Business_at_Risk_Approval_Template</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>1 AND 2</booleanFilter>
        <criteriaItems>
            <field>At_Risk_Business__c.Key_Sales_Owner_Manager__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>At_Risk_Business__c.Stage__c</field>
            <operation>equals</operation>
            <value>Submitted</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>At_Risk_Business_Approved</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_Stage_to_Work_In_Progress</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Status_to_Approved_by_SM</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>At_Risk_Business_Rejected</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_Stage_to_New</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Update_Status_to_Submitted_for_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Business at Risk Approval Template Mod</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>true</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>1</processOrder>
    <recallActions>
        <action>
            <name>Update_Stage_to_New</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Status_to_Draft</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>

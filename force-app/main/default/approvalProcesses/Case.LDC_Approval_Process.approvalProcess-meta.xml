<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>CaseNumber</field>
        <field>Owner</field>
        <field>CreatedDate</field>
        <field>LDC_Manual_Rejection_Reason__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <description>Consignment Value $501 - $10000</description>
        <entryCriteria>
            <criteriaItems>
                <field>Case.Total_Amount_of_Claim__c</field>
                <operation>greaterThan</operation>
                <value>500</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>ApproveRecord</ifCriteriaNotMet>
        <label>Branch Manager</label>
        <name>Branch_Manager</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>StarTrack_LDC_Approval_Step_2</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Consignment Value &gt; $10000</description>
        <entryCriteria>
            <criteriaItems>
                <field>Case.Total_Amount_of_Claim__c</field>
                <operation>greaterThan</operation>
                <value>10000</value>
            </criteriaItems>
        </entryCriteria>
        <label>General Manager</label>
        <name>General_Manager</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <description>StarTrack Approval Process for Late Delivery Claim</description>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Case.RecordType</field>
            <operation>equals</operation>
            <value>Delivery Enquiry</value>
        </criteriaItems>
        <criteriaItems>
            <field>Case.Enquiry_Type__c</field>
            <operation>equals</operation>
            <value>LDC</value>
        </criteriaItems>
        <criteriaItems>
            <field>Case.LDC_Manual_Check_Result__c</field>
            <operation>equals</operation>
            <value>Passed</value>
        </criteriaItems>
        <criteriaItems>
            <field>Case.Total_Amount_of_Claim__c</field>
            <operation>greaterThan</operation>
            <value>0</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>ST_Set_Resolution_Code_to_System_Closed</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>StarTrack_Set_Approval_Stat_to_Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>StarTrack_Set_Case_Status_to_Wait_Integ</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>StarTrack_Set_Reference_ID_value</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_LDC_Approval_Flag</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>StarTrack_Set_AS_to_Rejected</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>StarTrack_Set_Case_Status_Closed</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>StarTrack_Set_Resolution_Code_to_Reject</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_LDC_Approval_Flag</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>StarTrack_Change_Case_Status</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>StarTrack_Set_Approval_Status_to_Pending</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>LDC Approval Process</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>3</processOrder>
    <recallActions>
        <action>
            <name>StarTrack_Change_Case_Status_to_UI</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>StarTrack_Set_Approval_Status_to_Draft</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>

<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Case__c</field>
        <field>Owner</field>
        <field>Account_Manager__c</field>
        <field>Credit_Amount__c</field>
        <field>Amount_Charged__c</field>
        <field>Amount_Claimed__c</field>
        <field>Product_Family__c</field>
        <field>Actual_Amount__c</field>
        <field>Case_Summary__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Date_Submitted_to_Approver</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>Customer_Resolutions_Manager</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <formula>AND (
				CreditAmountExclusiveGST__c &gt;100 , CreditAmountExclusiveGST__c &lt;=1000)</formula>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Customer Res Manager - &gt;100 to &lt;=1000</label>
        <name>Customer_Res_Manager_100_to_1000</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Date_Submitted_to_Approver</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Update_Status_Pending_Signatures</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>Customer_Resolutions_Manager</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <formula>CreditAmountExclusiveGST__c &gt;1000</formula>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Customer Res Manager - &gt;1000</label>
        <name>Customer_Res_Manager_1000</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Update_Status_Approved</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>Customer_Resolutions_Manager</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <formula>CreditAmountExclusiveGST__c &gt;1000</formula>
        </entryCriteria>
        <label>Approval Signatures Attached</label>
        <name>Approval_Signatures_Attached</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <emailTemplate>Australia_Post_Case_Templates/Credit_Approval</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>AND ( CreditAmountExclusiveGST__c &gt; 100,
	NOT(ISPICKVAL( Status__c, &apos;Approved&apos;)), 
	 Ready_For_Approval__c = true)</formula>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>CreditApprovedNotetoOwner</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_Status_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Credit_Approval_Rejection_Note_to_Record_Owner</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_Status_To_Rejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Approval_Level_Customer_Resolutions_Mana</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Date_Submitted_to_Approver</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Status_to_Pending_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Enterprise Credit Disputesv1.2</label>
    <processOrder>2</processOrder>
    <recallActions>
        <action>
            <name>Blank_Current_Approver</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Status_to_New</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>

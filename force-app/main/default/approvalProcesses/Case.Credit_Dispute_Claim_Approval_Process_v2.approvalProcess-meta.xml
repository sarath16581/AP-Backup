<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>CaseNumber</field>
        <field>Owner</field>
        <field>Status</field>
        <field>ArticleTest__c</field>
        <field>Amount_Claimed__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>StarTrack_Account_Manager</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>0 – 1,000 Account Managers</description>
        <entryCriteria>
            <criteriaItems>
                <field>Case.Amount_Claimed__c</field>
                <operation>greaterThan</operation>
                <value>0</value>
            </criteriaItems>
            <criteriaItems>
                <field>Case.Amount_Claimed__c</field>
                <operation>lessOrEqual</operation>
                <value>1000</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Account Managers</label>
        <name>Account_Managers</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>GM_Sales_National_Disputes_Manager</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>0 – 5,000 GM Sales / National Disputes Manager</description>
        <entryCriteria>
            <criteriaItems>
                <field>Case.Amount_Claimed__c</field>
                <operation>greaterThan</operation>
                <value>0</value>
            </criteriaItems>
            <criteriaItems>
                <field>Case.Amount_Claimed__c</field>
                <operation>lessOrEqual</operation>
                <value>5000</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>National Disputes Manager</label>
        <name>National_Disputes_Manager</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>StarTrack_Product_Manager</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>5,000 – 10,000 Direct Reports GM Finance / Product Managers</description>
        <entryCriteria>
            <criteriaItems>
                <field>Case.Amount_Claimed__c</field>
                <operation>greaterThan</operation>
                <value>5000</value>
            </criteriaItems>
            <criteriaItems>
                <field>Case.Amount_Claimed__c</field>
                <operation>lessOrEqual</operation>
                <value>10000</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Product Manager</label>
        <name>Product_Manager</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>StarTrack_GM_Product</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>10,000 - 50,000 GM Product / GM Finance</description>
        <entryCriteria>
            <criteriaItems>
                <field>Case.Amount_Claimed__c</field>
                <operation>greaterThan</operation>
                <value>10000</value>
            </criteriaItems>
            <criteriaItems>
                <field>Case.Amount_Claimed__c</field>
                <operation>lessOrEqual</operation>
                <value>50000</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>GM Product</label>
        <name>GM_Product</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>StarTrack_EGM_Parcel</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>50,000+ EGM Parcel / CFO Post</description>
        <entryCriteria>
            <criteriaItems>
                <field>Case.Amount_Claimed__c</field>
                <operation>greaterThan</operation>
                <value>50000</value>
            </criteriaItems>
        </entryCriteria>
        <label>EGM Parcel</label>
        <name>EGM_Parcel</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <description>StarTrack approval process for Credit Dispute Claims</description>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>1 AND 2 AND 3 AND 4 AND 5 AND 6 AND 7 AND 8</booleanFilter>
        <criteriaItems>
            <field>Case.RecordType</field>
            <operation>equals</operation>
            <value>Credit Dispute Claim</value>
        </criteriaItems>
        <criteriaItems>
            <field>Case.Connote_number__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>Case.Calc_Link_Account__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>Case.Calc_Related_Billing_Account__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <criteriaItems>
            <field>Case.Amount_Claimed__c</field>
            <operation>greaterThan</operation>
            <value>0</value>
        </criteriaItems>
        <criteriaItems>
            <field>Case.Status</field>
            <operation>notContain</operation>
            <value>Closed</value>
        </criteriaItems>
        <criteriaItems>
            <field>Case.Status</field>
            <operation>notEqual</operation>
            <value>Awaiting Approval</value>
        </criteriaItems>
        <criteriaItems>
            <field>Case.Enquiry_Type__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>StarTrack_Change_Case_Status_to_Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>StarTrack_Set_Approval_Stat_to_Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>StarTrack_Set_SFA_Checkbox_to_False</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>StarTrack_Change_Case_Status_to_AR</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>StarTrack_Set_Approval_Status_to_Draft</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>StarTrack_Set_SFA_Checkbox_to_False</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>StarTrack_Change_Case_Status</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>StarTrack_Set_Approval_Status_to_Pending</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Credit Dispute Claim Approval Process</label>
    <processOrder>1</processOrder>
    <recallActions>
        <action>
            <name>StarTrack_Change_Case_Status_to_UI</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>StarTrack_Set_Approval_Status_to_Draft</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>StarTrack_Set_SFA_Checkbox_to_False</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>

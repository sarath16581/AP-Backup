<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Compensation_Amount__c</field>
        <field>SDR_Value__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>SSSW_Approve</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <entryCriteria>
            <booleanFilter>(1 OR 2 OR 3) AND (4 OR 5 OR 6)</booleanFilter>
            <criteriaItems>
                <field>Compensation__c.Total_Compensation_Amount__c</field>
                <operation>greaterOrEqual</operation>
                <value>500</value>
            </criteriaItems>
            <criteriaItems>
                <field>Compensation__c.Replacement_Value__c</field>
                <operation>greaterOrEqual</operation>
                <value>500</value>
            </criteriaItems>
            <criteriaItems>
                <field>Compensation__c.SDR_Value__c</field>
                <operation>greaterOrEqual</operation>
                <value>500</value>
            </criteriaItems>
            <criteriaItems>
                <field>Compensation__c.Total_Compensation_Amount__c</field>
                <operation>lessOrEqual</operation>
                <value>5000</value>
            </criteriaItems>
            <criteriaItems>
                <field>Compensation__c.Replacement_Value__c</field>
                <operation>lessOrEqual</operation>
                <value>5000</value>
            </criteriaItems>
            <criteriaItems>
                <field>Compensation__c.SDR_Value__c</field>
                <operation>lessOrEqual</operation>
                <value>5000</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>ApproveRecord</ifCriteriaNotMet>
        <label>Compensation Value is Greater than $500</label>
        <name>Compensation_Value_is_Greater_than_500</name>
    </approvalStep>
    <description>Approval Process that sends the approval to the centre manager if over $500 for International Accounting, Account Credit and Replacement Products</description>
    <emailTemplate>SSSWCaseTemplates/SSSW_Compensation_Approval_Req_CCM</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>(1 AND 2 AND 6 AND (3 OR 4 OR 5)) AND (1 AND 2 AND 6 AND (7 AND 8 AND 9))</booleanFilter>
        <criteriaItems>
            <field>Compensation__c.RecordType</field>
            <operation>equals</operation>
            <value>Account Credit,International Accounting,Replacement Product,EFT</value>
        </criteriaItems>
        <criteriaItems>
            <field>Compensation__c.Status__c</field>
            <operation>notEqual</operation>
            <value>Contact Customer for Proof of Value</value>
        </criteriaItems>
        <criteriaItems>
            <field>Compensation__c.Total_Compensation_Amount__c</field>
            <operation>greaterOrEqual</operation>
            <value>500</value>
        </criteriaItems>
        <criteriaItems>
            <field>Compensation__c.Replacement_Value__c</field>
            <operation>greaterOrEqual</operation>
            <value>500</value>
        </criteriaItems>
        <criteriaItems>
            <field>Compensation__c.SDR_Value__c</field>
            <operation>greaterOrEqual</operation>
            <value>500</value>
        </criteriaItems>
        <criteriaItems>
            <field>Compensation__c.Bank_Detail_Provided_By_Customer__c</field>
            <operation>equals</operation>
            <value>False</value>
        </criteriaItems>
        <criteriaItems>
            <field>Compensation__c.Total_Compensation_Amount__c</field>
            <operation>lessOrEqual</operation>
            <value>5000</value>
        </criteriaItems>
        <criteriaItems>
            <field>Compensation__c.Replacement_Value__c</field>
            <operation>lessOrEqual</operation>
            <value>5000</value>
        </criteriaItems>
        <criteriaItems>
            <field>Compensation__c.SDR_Value__c</field>
            <operation>lessOrEqual</operation>
            <value>5000</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>SSSW_Approve</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>SSSWRejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <label>Compensation - Non Money order over 500</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>CallCentreManager__c</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>6</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>

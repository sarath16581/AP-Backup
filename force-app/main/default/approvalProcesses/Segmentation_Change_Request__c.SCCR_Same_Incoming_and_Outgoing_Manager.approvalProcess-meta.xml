<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Organisation__c</field>
        <field>Parent_Organisation__c</field>
        <field>CurrentSalesTeam__c</field>
        <field>Proposed_Sales_Team__c</field>
        <field>Account_Manager_Current__c</field>
        <field>Proposed_Account_Manager__c</field>
        <field>Reasonforchange__c</field>
        <field>Sub_Reason_for_Change__c</field>
        <field>Outgoing_Approver__c</field>
        <field>Incoming_Approver__c</field>
        <field>Original_FY_Target__c</field>
        <field>Current_FY_Revenue__c</field>
        <field>Local_Area_Market__c</field>
        <field>Traded_in_the_Last_3_Months__c</field>
        <field>Traded_in_the_Last_6_Months__c</field>
        <field>Description__c</field>
        <field>Had_Handover_Conversation__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Email_Creator_of_SCCR</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Send_Email_to_Proposed_Account_manager</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Update_Approval_Status_to_Approved</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>Hidden_Incoming_Aprrover__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Manager Approval</label>
        <name>Manager_Approval</name>
        <rejectionActions>
            <action>
                <name>Email_Requestor_of_Rejection</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Update_Approval_Status_to_Rejected</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Update_Rejected_Date</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <description>This approval process will be invoked if both incoming as well as outgoing managers are same.</description>
    <emailTemplate>Phase_2_Email_Templates/SCCR_on_submit</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>NOT(ISBLANK( Incoming_Approver__c ))&amp;&amp; (Incoming_Approver__c != &apos;Holding User&apos;) &amp;&amp;  Proposed_Account_Manager__c&lt;&gt;&apos;00590000000im7B&apos;&amp;&amp; Or(Outgoing_Approver__c ==   Incoming_Approver__c,  Outgoing_Approver__c==  &apos;Holding User Manager&apos;)&amp;&amp; Or(  ISPICKVAL( Approval_Status__c , &apos;New&apos; )  ,ISPICKVAL( Approval_Status__c , &apos;Recalled&apos; ) , ISPICKVAL( Approval_Status__c , &apos;Cancelled&apos; ) ,ISPICKVAL( Approval_Status__c , &apos;Rejected&apos; ))</formula>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Update_Approval_Status_to_Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Approved_Date</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Approval_Comment_Required</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Approval_Status_to_Rejected</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Approved_Date</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Update_Approval_Status</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Date_when_Sent</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>SCCR Same Incoming and Outgoing Manager</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>1</processOrder>
    <recallActions>
        <action>
            <name>Update_Status_to_Recalled</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_submission_date</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>

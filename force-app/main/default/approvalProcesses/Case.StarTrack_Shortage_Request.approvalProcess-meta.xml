<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>CaseNumber</field>
        <field>Owner</field>
        <field>Status</field>
        <field>ArticleTest__c</field>
        <field>Network__c</field>
        <field>Account</field>
        <field>Tier__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>StarTrack_Final_Shortage_Approver</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Shortage Request</label>
        <name>Shortage_Request</name>
    </approvalStep>
    <description>StarTrack approval process that will be used for shortage request.</description>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Case.RecordType</field>
            <operation>equals</operation>
            <value>Delivery Enquiry</value>
        </criteriaItems>
        <criteriaItems>
            <field>Case.Enquiry_Type__c</field>
            <operation>equals</operation>
            <value>Short - No Scan,Short - Scanned,Final Shortage,Incorrect Delivery</value>
        </criteriaItems>
        <criteriaItems>
            <field>Case.Approval_Status__c</field>
            <operation>notEqual</operation>
            <value>Shortage Request Submitted</value>
        </criteriaItems>
        <criteriaItems>
            <field>Case.Approval_Status__c</field>
            <operation>notEqual</operation>
            <value>Shortage Request Approved</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>StarTrack_Change_Case_Status_to_Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Approval_Status</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Enquiry_Type_to_Final_Shortage</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>StarTrack_Change_Case_Status_to_AR</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>StarTrack_Set_Approval_Status_to_Draft</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>StarTrack_Update_Consignment_Shortage</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>StarTrack_Change_Case_Status</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Approval_Status_to_Submitted</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>StarTrack Shortage Request</label>
    <processOrder>1</processOrder>
    <recallActions>
        <action>
            <name>StarTrack_Change_Case_Status_to_UI</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>StarTrack_Set_Approval_Status_to_Draft</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>StarTrack_Update_Consignment_Shortage</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>

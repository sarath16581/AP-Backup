<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Compensation_Amount__c</field>
        <field>SDR_Value__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>chelsea.o&apos;reilly@auspost.com.au</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <booleanFilter>1 OR 2 OR 3</booleanFilter>
            <criteriaItems>
                <field>Compensation__c.Total_Compensation_Amount__c</field>
                <operation>greaterThan</operation>
                <value>5000</value>
            </criteriaItems>
            <criteriaItems>
                <field>Compensation__c.Replacement_Value__c</field>
                <operation>greaterThan</operation>
                <value>5000</value>
            </criteriaItems>
            <criteriaItems>
                <field>Compensation__c.SDR_Value__c</field>
                <operation>greaterThan</operation>
                <value>5000</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>ApproveRecord</ifCriteriaNotMet>
        <label>Compensation Value is Greater than $5k</label>
        <name>Compensation_Value_is_Greater_than_5k</name>
    </approvalStep>
    <description>Approval Process that is valid for EFT recordtype where the customer has agreed to provide bank details via a webform for an amount more than or equal to 5000</description>
    <emailTemplate>SSSWCaseTemplates/SSSW_Compensation_Approval_Req_CCM</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>(1 AND 2 AND 6 AND (3 OR 4 OR 5))</booleanFilter>
        <criteriaItems>
            <field>Compensation__c.RecordType</field>
            <operation>equals</operation>
            <value>EFT</value>
        </criteriaItems>
        <criteriaItems>
            <field>Compensation__c.Status__c</field>
            <operation>notEqual</operation>
            <value>Contact Customer for Proof of Value</value>
        </criteriaItems>
        <criteriaItems>
            <field>Compensation__c.Total_Compensation_Amount__c</field>
            <operation>greaterThan</operation>
            <value>5000</value>
        </criteriaItems>
        <criteriaItems>
            <field>Compensation__c.Replacement_Value__c</field>
            <operation>greaterThan</operation>
            <value>5000</value>
        </criteriaItems>
        <criteriaItems>
            <field>Compensation__c.SDR_Value__c</field>
            <operation>greaterThan</operation>
            <value>5000</value>
        </criteriaItems>
        <criteriaItems>
            <field>Compensation__c.Bank_Detail_Provided_By_Customer__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>SSSW_Approved_Awaiting_Customer</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>SSSWRejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <label>Compensation - Awaiting Customer &gt; 5k</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>CallCentreManager__c</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>7</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>

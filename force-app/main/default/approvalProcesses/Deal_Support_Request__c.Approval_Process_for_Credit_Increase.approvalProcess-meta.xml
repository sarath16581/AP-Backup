<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>Stage__c</field>
        <field>Status__c</field>
        <field>Requestor_Name__c</field>
        <field>Organisation__c</field>
        <field>Opportunity__c</field>
        <field>RecordType</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <type>adhoc</type>
            </approver>
        </assignedApprover>
        <label>Step 1</label>
        <name>Step_1</name>
    </approvalStep>
    <description>Approval Process for Credit Limit Increase for Credit Management DSR</description>
    <emailTemplate>unfiled$public/Deal_Support_Request_Approval_Notification</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Deal_Support_Request__c.RecordType</field>
            <operation>equals</operation>
            <value>Credit Management Request</value>
        </criteriaItems>
        <criteriaItems>
            <field>Deal_Support_Request__c.Stage__c</field>
            <operation>equals</operation>
            <value>Work In Progress</value>
        </criteriaItems>
        <criteriaItems>
            <field>Deal_Support_Request__c.Work_Type__c</field>
            <operation>equals</operation>
            <value>Credit Limit Review</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Approval_Flag_is_set_once_Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Deal_Support_request_Approved</name>
            <type>Alert</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Deal_Support_request_Rejected</name>
            <type>Alert</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <label>Approval Process for Credit Increase</label>
    <processOrder>3</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>

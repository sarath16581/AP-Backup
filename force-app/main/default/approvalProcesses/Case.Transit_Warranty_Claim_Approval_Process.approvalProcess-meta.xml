<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <submitter>StarTrack_Transit_Warranty_Team</submitter>
        <type>group</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>CaseNumber</field>
        <field>Owner</field>
        <field>Status</field>
        <field>ArticleTest__c</field>
        <field>Amount_Claimed__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>StarTrack_Corporate_Claims_Manager</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Check if amount claimed reaches $5000.</description>
        <entryCriteria>
            <criteriaItems>
                <field>Case.Amount_Claimed__c</field>
                <operation>greaterThan</operation>
                <value>0</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>ApproveRecord</ifCriteriaNotMet>
        <label>Amount claimed up to $5000</label>
        <name>Amount_claimed_up_to_5000</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>StarTrack_Client_Services_Manager</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Require corporate claims manager approval when amount claimed is greater than $5000.</description>
        <entryCriteria>
            <criteriaItems>
                <field>Case.Amount_Claimed__c</field>
                <operation>greaterThan</operation>
                <value>5000</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>ApproveRecord</ifCriteriaNotMet>
        <label>Amount Claimed greater $5000</label>
        <name>Amount_Claimed_greater_5000</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>GM_StarTrack_Express_Products</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Will require approval from GM StarTrack &amp; Express Products once amount claimed was over $25k.</description>
        <entryCriteria>
            <criteriaItems>
                <field>Case.Amount_Claimed__c</field>
                <operation>greaterThan</operation>
                <value>25000</value>
            </criteriaItems>
        </entryCriteria>
        <label>Amount Claimed greater $25000</label>
        <name>Amount_Claimed_greater_25000</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <description>StarTrack approval process for transit warranty claim case record type.</description>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>1 AND 2 AND 3 AND 4 AND 5 AND 6 AND 7</booleanFilter>
        <criteriaItems>
            <field>Case.RecordType</field>
            <operation>equals</operation>
            <value>Transit Warranty Claim</value>
        </criteriaItems>
        <criteriaItems>
            <field>Case.Status</field>
            <operation>notEqual</operation>
            <value>Closed,Awaiting Approval</value>
        </criteriaItems>
        <criteriaItems>
            <field>Case.Calc_Related_Consignment__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <criteriaItems>
            <field>Case.Calc_Related_Billing_Account__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <criteriaItems>
            <field>Case.Calc_Link_Account__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>Case.Calc_Fault_Depot__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <criteriaItems>
            <field>Case.Amount_Claimed__c</field>
            <operation>greaterThan</operation>
            <value>0</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>StarTrack_Change_Case_Status_to_AAP</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>StarTrack_Set_Approval_Stat_to_Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>StarTrack_Set_SFA_Checkbox_to_False</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>StarTrack_Change_Case_Status_to_AR</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>StarTrack_Set_Approval_Status_to_Draft</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>StarTrack_Set_SFA_Checkbox_to_False</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>StarTrack_Change_Case_Status</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>StarTrack_Set_Approval_Status_to_Pending</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Transit Warranty Claim Approval Process</label>
    <processOrder>2</processOrder>
    <recallActions>
        <action>
            <name>StarTrack_Change_Case_Status_to_UI</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>StarTrack_Set_Approval_Status_to_Draft</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>StarTrack_Set_SFA_Checkbox_to_False</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>

        <rules>
            <name>Check_if_StarTrack_Request_from_Opty_with_atleast_one_CSQ</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>Select_the_Deal_Support_Request_Type</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Pricing_Support_Request_StarTrack</stringValue>
                </rightValue>
            </conditions>
            <conditions>

    <formulas>
        <description>STP-2299 - This formula trim the technical details from the standard Salesforce error message to return a more user friendly message on the UI.</description>
        <name>userFaultMessage</name>
        <dataType>String</dataType>
        <expression>MID(
{!$Flow.FaultMessage},
 FIND(&apos;FIELD_CUSTOM_VALIDATION_EXCEPTION: &apos;, {!$Flow.FaultMessage} )+34,
 (
   LEN({!$Flow.FaultMessage} ) - 
   (FIND(&apos;FIELD_CUSTOM_VALIDATION_EXCEPTION: &apos;, {!$Flow.FaultMessage} )+34)
 ) -
 (
   LEN({!$Flow.FaultMessage} ) - 
   FIND(&apos;. You can look up ExceptionCode values&apos;, {!$Flow.FaultMessage} )
 )  
)</expression>
    </formulas>

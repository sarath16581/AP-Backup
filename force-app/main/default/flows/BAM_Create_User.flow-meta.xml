    <description>Flow to create a community user.  Performed in this flow to allow a standard community user create another user record.</description>
    <formulas>
        <description>Calculated alias string based of contact id</description>
        <name>fxAlias</name>
        <dataType>String</dataType>
        <expression>Right(Left({!varContactId},15),8)</expression>
    </formulas>
    <formulas>
        <description>Unique calculated value for nickname and prefix for username - based on number of seconds since year 2000 and the contact Id</description>
        <name>fxUsernamePrefix</name>
        <dataType>String</dataType>
        <expression>{!varContactId}+TEXT(ROUND((NOW() - DATETIMEVALUE( &quot;2000-01-01 12:00:00&quot; ) )*1440*60,0))</expression>
    </formulas>
    <interviewLabel>BAM Create User {!$Flow.CurrentDateTime}</interviewLabel>
    <label>BAM Create User</label>

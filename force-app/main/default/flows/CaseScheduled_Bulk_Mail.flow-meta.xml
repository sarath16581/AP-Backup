<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>57.0</apiVersion>
    <description>Scheduled trigger flow that runs for a bulk mail case.</description>
    <environments>Default</environments>
    <interviewLabel>CaseScheduled Bulk Mail {!$Flow.CurrentDateTime}</interviewLabel>
    <label>CaseScheduled Bulk Mail</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordUpdates>
        <name>Reset_case_update_fields_when_closed</name>
        <label>Reset case update fields when closed</label>
        <locationX>440</locationX>
        <locationY>276</locationY>
        <inputAssignments>
            <field>Case_Update_Time__c</field>
        </inputAssignments>
        <inputAssignments>
            <field>Case_Update__c</field>
        </inputAssignments>
        <inputReference>$Record</inputReference>
    </recordUpdates>
    <recordUpdates>
        <name>Update_case_record_for_permanent_close</name>
        <label>Update case record for permanent close</label>
        <locationX>176</locationX>
        <locationY>276</locationY>
        <inputAssignments>
            <field>Bypass_Data_enforcement__c</field>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>LastIncomingEmailAddress__c</field>
        </inputAssignments>
        <inputAssignments>
            <field>Permanent_Close__c</field>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </inputAssignments>
        <inputReference>$Record</inputReference>
    </recordUpdates>
    <start>
        <locationX>50</locationX>
        <locationY>0</locationY>
        <doesRequireRecordChangedToMeetCriteria>true</doesRequireRecordChangedToMeetCriteria>
        <filterLogic>and</filterLogic>
        <filters>
            <field>Status</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>Closed</stringValue>
            </value>
        </filters>
        <filters>
            <field>Permanent_Close__c</field>
            <operator>EqualTo</operator>
            <value>
                <booleanValue>false</booleanValue>
            </value>
        </filters>
        <filters>
            <field>Case_RecordType_Name__c</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>Bulk Mail Onboarding</stringValue>
            </value>
        </filters>
        <object>Case</object>
        <recordTriggerType>CreateAndUpdate</recordTriggerType>
        <scheduledPaths>
            <name>X_Days_after_case_closed</name>
            <connector>
                <targetReference>Update_case_record_for_permanent_close</targetReference>
            </connector>
            <label>Time after case closed</label>
            <offsetNumber>0</offsetNumber>
            <offsetUnit>Minutes</offsetUnit>
            <recordField>ClosedDate</recordField>
            <timeSource>RecordField</timeSource>
        </scheduledPaths>
        <scheduledPaths>
            <name>X0_Hours_after_case_closed</name>
            <connector>
                <targetReference>Reset_case_update_fields_when_closed</targetReference>
            </connector>
            <label>0 Hours after case closed</label>
            <offsetNumber>0</offsetNumber>
            <offsetUnit>Hours</offsetUnit>
            <recordField>ClosedDate</recordField>
            <timeSource>RecordField</timeSource>
        </scheduledPaths>
        <triggerType>RecordAfterSave</triggerType>
    </start>
    <status>Active</status>
</Flow>

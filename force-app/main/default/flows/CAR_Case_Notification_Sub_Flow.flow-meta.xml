<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <actionCalls>
        <description>Send Email to the CAR case requestor when the associated Case is closed/resolved</description>
        <name>CAR_Send_Email_Closed_Alert</name>
        <label>CAR Send Email Closed Alert</label>
        <locationX>50</locationX>
        <locationY>278</locationY>
        <actionName>Case.CAR_Send_Email_Closed_Alert</actionName>
        <actionType>emailAlert</actionType>
        <flowTransactionModel>CurrentTransaction</flowTransactionModel>
        <inputParameters>
            <name>SObjectRowId</name>
            <value>
                <elementReference>vCase.Id</elementReference>
            </value>
        </inputParameters>
    </actionCalls>
    <actionCalls>
        <name>CAR_Send_Email_Closed_Bounce_Back_Alert</name>
        <label>CAR Send Email Closed Bounce Back Alert</label>
        <locationX>314</locationX>
        <locationY>278</locationY>
        <actionName>Case.CAR_Send_Email_Closed_Bounce_Back_Alert</actionName>
        <actionType>emailAlert</actionType>
        <flowTransactionModel>CurrentTransaction</flowTransactionModel>
        <inputParameters>
            <name>SObjectRowId</name>
            <value>
                <elementReference>vCase.Id</elementReference>
            </value>
        </inputParameters>
    </actionCalls>
    <apiVersion>52.0</apiVersion>
    <decisions>
        <description>Based on Case Status send appropriate email alert</description>
        <name>Check_CAR_Case_Status</name>
        <label>Check CAR Case Status</label>
        <locationX>314</locationX>
        <locationY>158</locationY>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>Is_Status_closed_resolved</name>
            <conditionLogic>1 AND (2 OR 3 OR 4 OR 5) AND 6</conditionLogic>
            <conditions>
                <leftValueReference>hasCaseStatusChanged</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>vCase.Status</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Closed</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>vCase.Status</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Closed-duplicate</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>vCase.Status</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Closed-out of scope</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>vCase.Status</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Resolved</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>vCase.Requestor__c</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>CAR_Send_Email_Closed_Alert</targetReference>
            </connector>
            <label>Is Status closed/resolved</label>
        </rules>
        <rules>
            <name>Is_Status_already_closed_resolved</name>
            <conditionLogic>1 AND (2 OR 3 OR 4 OR 5) AND 6</conditionLogic>
            <conditions>
                <leftValueReference>hasCaseStatusChanged</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>vCase.Status</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Closed</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>vCase.Status</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Closed-duplicate</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>vCase.Status</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Closed-out of scope</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>vCase.Status</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Resolved</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>vCase.Requestor__c</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>CAR_Send_Email_Closed_Bounce_Back_Alert</targetReference>
            </connector>
            <label>Is Status already closed/resolved</label>
        </rules>
    </decisions>
    <description>This sub flow is triggered from AP Domain Flow - Record Triggered After Save Flow for Customer Analytics and Reporting Request (CAR) Cases</description>
    <interviewLabel>CAR Case Notification Sub Flow {!$Flow.CurrentDateTime}</interviewLabel>

<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>52.0</apiVersion>
    <decisions>
        <description>Identify Case Scenario and choose the appropriate outcome</description>
        <name>Identify_Case_Scenario</name>
        <label>Identify Case Scenario</label>
        <locationX>314</locationX>
        <locationY>335</locationY>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>Carded_Case_Notification</name>
            <conditionLogic>1 AND 2 AND (3 OR 4 OR 5 OR 6 OR 7)</conditionLogic>
            <conditions>
                <leftValueReference>$Record.Network__c</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.EnquirySubType__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Article carded - no delivery attempt</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.RecordType.DeveloperName</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <elementReference>$Label.REC_TYPE_DEV_SSSW_DELIVERY</elementReference>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.RecordType.DeveloperName</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <elementReference>$Label.REC_TYPE_DEV_SSSW_SERVICE</elementReference>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.RecordType.DeveloperName</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <elementReference>$Label.REC_TYPE_DEV_SSSW_GENERAL_ENQUIRY</elementReference>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.RecordType.DeveloperName</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <elementReference>$Label.REC_TYPE_DEV_SOCIAL</elementReference>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.RecordType.DeveloperName</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <elementReference>$Label.REC_TYPE_DEV_SSSW_FAX</elementReference>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Invoke_Carded_Case_Notification_Sub_Flow</targetReference>
            </connector>
            <doesRequireRecordChangedToMeetCriteria>true</doesRequireRecordChangedToMeetCriteria>
            <label>Carded Case Notification</label>
        </rules>
        <rules>
            <name>CAR_Case_Notification</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.RecordType.DeveloperName</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <elementReference>$Label.REC_TYPE_DEV_CAR</elementReference>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Invoke_CAR_Case_Notification_Sub_Flow</targetReference>
            </connector>
            <label>CAR Case Notification</label>
        </rules>
    </decisions>
    <description>A record triggered flow upon After save on Case object which invokes multiple sub flows based on the case scenario.</description>
    <formulas>
        <description>contains true or false accordingly if case status has changed</description>
        <name>hasCaseStatusChanged</name>
        <dataType>Boolean</dataType>
        <expression>ISCHANGED({!$Record.Status})</expression>
    </formulas>
    <interviewLabel>AP Domain Flow {!$Flow.CurrentDateTime}</interviewLabel>
    <label>AP Domain Flow</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <start>
        <locationX>188</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Identify_Case_Scenario</targetReference>
        </connector>
        <object>Case</object>
        <recordTriggerType>CreateAndUpdate</recordTriggerType>
        <triggerType>RecordAfterSave</triggerType>
    </start>
    <status>Active</status>
    <subflows>
        <name>Invoke_CAR_Case_Notification_Sub_Flow</name>
        <label>Invoke CAR Case Notification Sub Flow</label>
        <locationX>314</locationX>
        <locationY>455</locationY>
        <flowName>CAR_Case_Notification_Sub_Flow</flowName>
        <inputAssignments>
            <name>vCase</name>
            <value>
                <elementReference>$Record</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <name>hasCaseStatusChanged</name>
            <value>
                <elementReference>hasCaseStatusChanged</elementReference>
            </value>
        </inputAssignments>
    </subflows>
    <subflows>
        <name>Invoke_Carded_Case_Notification_Sub_Flow</name>
        <label>Invoke Carded Case Notification Sub Flow</label>
        <locationX>50</locationX>
        <locationY>455</locationY>
        <flowName>Carded_Case_Notification_Sub_Flow</flowName>
        <inputAssignments>
            <name>vCase</name>
            <value>
                <elementReference>$Record</elementReference>
            </value>
        </inputAssignments>
    </subflows>
</Flow>

<?xml version="1.0" encoding="UTF-8"?>
<QuickAction xmlns="http://soap.sforce.com/2006/04/metadata">
    <description>This Quick Action launches the pre-approval Approval Process. It is labelled the same as the standard button to streamline the business process.</description>
    <fieldOverrides>
        <field>CSQ_Status__c</field>
        <literalValue>Submitted for Pre-Approval</literalValue>
    </fieldOverrides>
    <fieldOverrides>
        <field>PreApprovalStatus__c</field>
        <literalValue>Pending Onboarding Approval</literalValue>
    </fieldOverrides>
    <label>Submit for Approval</label>
    <optionsCreateFeedItem>false</optionsCreateFeedItem>
    <quickActionLayout>
        <layoutSectionStyle>TwoColumnsLeftToRight</layoutSectionStyle>
        <quickActionLayoutColumns/>
        <quickActionLayoutColumns/>
    </quickActionLayout>
    <type>Update</type>
</QuickAction>

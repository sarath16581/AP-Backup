<aura:component extends="c:SS_uiWizardPage" description="Complaints and Feedback Wizard Page 2: Contact Details">
    
    <aura:attribute name="checkInputsOnRender" type="Boolean" default="true"/>
    <aura:attribute name="showErrorSummary" type="Boolean" default="false"/>
    
    <aura:handler name="chasGenComponentEvent" event="c:chasGenComponentEvent" action="{!c.onchange}"/>
    <aura:handler name="render" value="{!this}" action="{!c.onRender}"/>
    
    <!--Go back button-->
        <div class="left-padding">
            <img src="sfsites/c/resource/ChasIcons/chas-icons/pngs/UI/icons/back_arrow.png" alt="Go back"/><label>&nbsp;</label>
            <lightning:button label="BACK" variant="base" onclick="{!c.goBackHandler}" class="goBack"/>
        </div>
    <c:ChasFieldset label="Contact details" customStyle="left-padding">
        <c:ChasForm customStyle="left-padding">
            <div class="outer-box">
                <!--Error summary-->
                <aura:if isTrue="{! v.showErrorSummary }">
                    <c:ChasErrorSummary aura:id="chasErrorSummary" errors="{! v.errors }"/>
                </aura:if>
                <!-- Input fields........-->
                <div class="form-input-container">
                    <c:ChasInput type='text' aura:id='chasInput' name='ChasGivenName' required='true' label='Given name' value='{! v.wizardData.givenName }' />
                    <c:ChasInput type='text' aura:id='chasInput' name='ChasSurname' required='true' label='Surname' value='{! v.wizardData.surname }' />
                    <c:ChasInput type='email' aura:id='chasInput' name='ChasEmail' required='true' label='Email address' value='{! v.wizardData.emailId }' />
                    <c:ChasInput type='tel' aura:id='chasInput' name='ChasPhone' required='true' label='Phone number' value='{! v.wizardData.phone }' >
                        <p class="chas-body_small">Please include the area code if it is landline</p>
                    </c:ChasInput>
                    
                    <!-- Contact Preference, added by Edmarco on July 2019 -->
                    <c:ChasSelect aura:id='chasInput' name='ChasContactPreferrence' label='Contact Preference' options="{!v.contactPreferrenceOptions}" value='{!v.wizardData.contactPreferrence}' short="true" /> 
                </div>
                <c:ChasNavButtons nextLabel="Continue" disabled="false" nextAction="{! c.goForward }"/>
            </div>
        </c:ChasForm>
    </c:ChasFieldset>
    
    
    
</aura:component>
-->
<apex:page docType="html-5.0" controller="TDF_AssignDriverToDutyController">
    <apex:stylesheet value="{!URLFOR($Resource.TDFLightningCSS, 'assets/styles/salesforce-lightning-design-system-vf.min.css')}" />
    <apex:form >
        
		<apex:pageMessages />  
        <apex:pageBlock title="Assign to {!srName}" id="users_list">
            
            Start Date : <apex:input type="date" value="{!startDate}"/>
            End Date : <apex:input type="date" value="{!endDate}"/>
            
            <apex:selectList size="1" value="{!selectedSRForAssignment}" styleClass="slds-select">
            	<apex:selectOptions value="{!srToAssignSelectList}" />
            </apex:selectList>
            
            <apex:commandButton value="Assign Driver" action="{!assignDriver}" styleClass="slds-button slds-button_brand" />
            <apex:commandButton value="Cancel" onclick="parent.postMessage('closeLightbox','*');" styleClass="slds-button slds-button_brand" />

        </apex:pageBlock>
    
    </apex:form>
    
</apex:page>
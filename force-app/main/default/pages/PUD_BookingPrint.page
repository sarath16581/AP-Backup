<apex:page docType="html-5.0" standardController="PUD_Route__c" extensions="PUD_JobsPrintfromRouteControllerX" renderAs="pdf" applyBodyTag="false" >
<!--Page to allow printing of Duty for driver a backup to the mobile device -->
<!--Uses controller extension to retreive data. Controller required to retreive long field and allow sort on Day Start Time-->  
<!--Created 26-11-19 Dheeraj Mandavilli-->  
    <head>
        <style type="text/css" media="print">
            @page {
                @top-center {
                    content: element(header);
                }       
                @bottom-center {
                    content: element(footer);
                }
            }
             @page { size: A4 landscape; }
            div.header {
                padding: 5px;
            <!--position: running(header)-->;
            	position: static(header);
            }
            div.footer {
                display: block;
                padding: 5px;
                position: running(footer);
            }
            .pagenumber:before {
                content: counter(page);
            }
            .pagecount:before {
                content: counter(pages);
            }
        </style>
    </head>
    <div class="header">
        <!--center>
            <img src="{!$Resource.auspost_logo}" width="15%"/>
        </center--> 
  	</div>
    <div class="footer">
        <div>
            <center>
                Page <span class="pagenumber"/> of <span class="pagecount"/>
                (
                <apex:outputText value="{0, date, d MMM yyyy}">
                    <apex:param value="{!NOW()}" />
                </apex:outputText>
                )
            </center>
        </div>
    </div>
    <div class="content">  
        
        <!--DT Block-->
        <!--apex:pageBlock title="Duty {! PUD_Booking__c.Name}"  id="dt-list"  >
            Effective Date: &nbsp; <apex:outputField value="{! Route_Template__c.Effective_Date__c}"/> &nbsp; &nbsp;
            Active Days: &nbsp; <apex:outputField value="{! Route_Template__c.Active_Route_Days__c}"/>
        </apex:pageBlock-->    
        <!--DT Block End-->     
        
        <!--JT Block--> 
        <apex:pageBlock >
            <center>
            		<img src="{!$Resource.auspost_logo}" width="15%"/>
            		<br/><br/>
            		<b>Driver Run Sheet for {!depotName}</b>
        			</center> 
                    <b>Route Name : {!routeName}</b><br/>
                    <br/>
                    <b>Date : {!reportdate}</b>
                    <br/>&nbsp;
           <apex:pageBlockTable value="{! jobTemplateList }" var="jt" border="1">
           <apex:column headerValue="Start Time" style="vertical-align:Top" width="50px">
                <apex:outputField value="{! jt.Display_Start_Time__c}"/>
            </apex:column>
            <apex:column value="{! jt.Booking_Type_Fx__c }" style="vertical-align:Top" width="80px"/>
             <apex:column headerValue="Location Name" style="vertical-align:Top" width="80px">
                <apex:outputField value="{! jt.Location__c}"/>
            </apex:column>
             <apex:column headerValue="Location" style="vertical-align:Top" width="80px">
                <apex:outputField value="{! jt.Address__c}"/>
            </apex:column>
            <apex:column headerValue="Job and Site Instructions" style="vertical-align:Top" width="80px">
                <apex:outputField value="{!jt.Job_Information__c}" /> <br></br><br></br>
        		<!--apex:outputField value="{!jt.Comments__c}" /-->
    		</apex:column> 
            <apex:column value="{! jt.Booking_Comments__c}" style="vertical-align:Top" width="80px"/>
            <apex:column value="{! jt.Key_Number__c }" style="vertical-align:Top" width="50px"/>
            <apex:column value="{! jt.Deliver_Product__c}" style="vertical-align:Top" width="80px"/>
            <apex:column value="{! jt.Revenue_Check__c}" style="vertical-align:Top" width="25px"/>
            <apex:column value="{! jt.Stop_Credit__c}" style="vertical-align:Top" width="25px"/>
            <apex:column headerValue="MS" style="vertical-align:Top" width="10px">
            </apex:column> 
            <apex:column headerValue="E" style="vertical-align:Top" width="25px">
            </apex:column> 
            <apex:column headerValue="P/F" style="vertical-align:Top" width="5px">
            </apex:column> 
            <apex:column headerValue="NP" style="vertical-align:Top" width="5px">
            </apex:column> 
            <apex:column headerValue="N" style="vertical-align:Top" width="25px">
            </apex:column>     
            </apex:pageBlockTable>
        </apex:pageBlock>
        <!--JT Block End-->

	</div>
</apex:page>
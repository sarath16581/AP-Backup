 <apex:page controller="accountStructureController_v2" sidebar="false" showHeader="false" readOnly="true">
    <apex:pageBlock title="Customer Hierarchy and associated Billing Accounts">
        <!--
        <apex:form >
            <apex:commandButton action="{!toExcel}" value="Send to Excel"/>
        </apex:form>
        -->
    To render this information in Excel, select all (CTRL + A), copy to clipboard (CTRL + C) and then paste (CTRL + V) into Excel.
    </apex:pageBlock>
    <html>
    <style>
   table.tailored th {
           background-color: #DDDDDD;
       padding: 2px;
           }
    </style>
    <table class="tailored">
    <tr>
       <th rowspan="2" valign="bottom">Legal Entity Name</th>
       <th rowspan="2" valign="bottom">Registered<br/>Business Name</th>
       <th rowspan="2" valign="bottom">Customer<br/>Org Number</th>
       <th rowspan="2" valign="bottom">Customer<br/>Org ABN</th>
       <th rowspan="2" valign="bottom">Customer<br/>Org ACN</th>
       <th rowspan="2" valign="bottom">Account Manager</th>
       <th rowspan="2" valign="bottom">Holding<br/>Role</th>
       <th rowspan="2" valign="bottom">Sales<br/>Team Owner</th>
       <th rowspan="2" valign="bottom">Super Admin</th>
    
       <th colspan="10" align="center">Billing Account Info</th>
    </tr>
    <tr>
       <th>Billing<br/>Account Name</th>
       <th>Billing<br/>Account Number</th>
       <th>Billing<br/>Account Type</th>
       <th>Marked<br/>for deletion</th>
       <th>Billing<br/>Account ABN</th>
       <th>Billing<br/>Account ACN</th>
       <th>Payer<br/>Account Number</th>
       <th>Authorisation<br/>Roles</th>
       <th>BAM<br/>Roles</th>
       <th>BAM<br/>Applications</th>

    </tr>
       <apex:repeat value="{!info}" var="i">
           <tr>
               <td nowrap="nowrap">
                   <apex:repeat value="{!i.lList}" var="j">
                       &nbsp;&nbsp;&nbsp;&nbsp;
                   </apex:repeat>
                   {!i.a.Name}
               </td>
               <td nowrap="nowrap">{!i.a.OrganisationTradingName}</td>
               <td nowrap="nowrap">{!i.a.AccountNumber}</td>
               <td nowrap="nowrap">{!i.a.ABN}</td>
               <td nowrap="nowrap">{!i.a.ACN}</td>
               <td nowrap="nowrap">{!i.a.OwnerName}</td>
               <td nowrap="nowrap">{!i.a.HoldingRoleReferenceName}</td>
               <td nowrap="nowrap">{!i.a.SalesDirectorName}</td>
               <td nowrap="nowrap">{!i.a.SuperAdminTo}</td>

               <apex:repeat value="{!i.a.BAList}" var="b">
                   <tr> 
                       <td>&nbsp;</td>
                       <td>&nbsp;</td>
                       <td>&nbsp;</td>
                       <td>&nbsp;</td>
                       <td>&nbsp;</td>
                       <td>&nbsp;</td>
                       <td>&nbsp;</td>
                       <td>&nbsp;</td>
                       <td>&nbsp;</td>
                       <td nowrap="nowrap">{!b.name}</td><td>{!b.LEGACYID}</td>
                       <td>{!b.Type}</td>
                       <td>{!b.SAPmarkedfordeletion}</td><td>{!b.ABN}</td><td>{!b.ACN}</td><td>{!b.PayerAccountLegacyId}</td><td>{!b.HasAuthorisationRule}</td><td>{!b.HasBAMRole}</td><td nowrap="nowrap">{!b.BAMApplications}</td>
                   </tr>
               </apex:repeat>
           </tr>
       </apex:repeat>
    </table>
    </html> 
</apex:page>
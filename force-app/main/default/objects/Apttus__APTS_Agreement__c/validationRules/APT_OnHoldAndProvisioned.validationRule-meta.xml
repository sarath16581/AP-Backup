<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>APT_OnHoldAndProvisioned</fullName>
    <active>true</active>
    <errorConditionFormula>AND( APT_Contract_On_Hold__c , APT_Provisioned_in_SAP__c)</errorConditionFormula>

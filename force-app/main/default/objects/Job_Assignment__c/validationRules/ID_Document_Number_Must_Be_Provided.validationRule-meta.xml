<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>ID_Document_Number_Must_Be_Provided</fullName>
    <active>true</active>
    <description>Validation rule to ensure a document number is provided when an ID type is chosen</description>
    <errorConditionFormula>NOT(ISPICKVAL( Identification_Type__c, &apos;&apos;)) &amp;&amp; ISBLANK(ID_Document_Number__c)</errorConditionFormula>
    <errorDisplayField>ID_Document_Number__c</errorDisplayField>
    <errorMessage>ID document number must be provided</errorMessage>
</ValidationRule>

<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Submitted_to_Risk_Rule</fullName>
    <active>false</active>
    <description>User must enter Submitted to Risk date when Bank Statements are received</description>
    <errorConditionFormula>ISNULL(Submitted_to_Risk__c ) &amp;&amp;
IsWelcomePackSent__c = FALSE &amp;&amp;
Opportunity__r.IsAPMSApplication__c = TRUE &amp;&amp;
(ISPICKVAL(Opportunity__r.Bank_statements__c, &apos;Received&apos;))</errorConditionFormula>
    <errorDisplayField>Submitted_to_Risk__c</errorDisplayField>
    <errorMessage>Please enter date when application has been submitted to Risk</errorMessage>
</ValidationRule>

<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Prevent_Booking_Location_edit_on_Booking</fullName>
    <active>true</active>
    <description>This validation rule prevents the Booking Location change on Booking record once it gets created.</description>
    <errorConditionFormula>ISCHANGED( Booking_Location__c )</errorConditionFormula>
    <errorMessage>Location cannot be changed.</errorMessage>
</ValidationRule>

<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>No_Meal_Breaks_At_Customer_Location</fullName>
    <active>true</active>
    <description>Booking of &apos;Other&apos; record types that are Meal Breaks can be linked only to non-customer locations.</description>
    <errorConditionFormula>AND(  ISPICKVAL(Booking_Type__c, &apos;Meal Break&apos;),  RecordType.DeveloperName = &apos;Other&apos;,  Booking_Location__r.RecordType.DeveloperName = &apos;AP_Customer&apos; )</errorConditionFormula>
    <errorDisplayField>Booking_Location__c</errorDisplayField>
    <errorMessage>Meal Breaks cannot be at a customer location.</errorMessage>
</ValidationRule>

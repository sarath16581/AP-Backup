<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>APT_Conversation</fullName>
    <active>true</active>
    <errorConditionFormula>AND(TEXT(Is_Startrack_Proposal__c) = &apos;Yes&apos; ,

<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>DoV_Type_and_Contract_Condition</fullName>
    <active>true</active>
    <description>Check if DoV Type is equal to Contract Condition.</description>
    <errorConditionFormula>TEXT(APT_DoV_Type__c) !=  TEXT(APT_Contract__r.Term__c)</errorConditionFormula>

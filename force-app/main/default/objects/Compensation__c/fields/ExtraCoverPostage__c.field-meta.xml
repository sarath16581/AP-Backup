<?xml version="1.0" encoding="UTF-8"?>
<CustomField xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>ExtraCoverPostage__c</fullName>
    <description>If Extra Cover then use double the Postage Service Value</description>
    <externalId>false</externalId>
    <formula>IF(TEXT(Cover_Type__c) =  &quot;Extra Cover&quot;  &amp;&amp;  Service_Value__c &gt; 0, 2*Service_Value__c,0)</formula>
    <formulaTreatBlanksAs>BlankAsZero</formulaTreatBlanksAs>
    <inlineHelpText>If Extra Cover is chosen, then Extra Cover Postage is double the Postage Service Value</inlineHelpText>
    <label>Extra Cover Postage</label>
    <precision>18</precision>
    <required>false</required>
    <scale>2</scale>
    <trackHistory>false</trackHistory>
    <trackTrending>false</trackTrending>
    <type>Currency</type>
</CustomField>
